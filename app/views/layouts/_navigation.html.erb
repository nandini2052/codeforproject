<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header" >

      <%= link_to "Home", root_path, class: "navbar-brand", id: "logo" %>

    <!-- Collect the nav links, forms, and other content for toggling -->

        <ul class="nav navbar-nav">
          <li><%= link_to "Buy a House", houses_path %></li>
          <li><%= link_to "Sell a House", new_house_path %></li>
          <% if logged_in? %>
           <li><%= link_to "Sellers", users_path %></li>
        <% end %>
        </ul>
      <!--  <form class="navbar-form navbar-left">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Enter location to search">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form> -->
        <%= form_tag(search_page_path, :method => "get",class: 'navbar-form navbar-left') do %>
        <div class="input-group">
          <%= search_field_tag :search, params[:search], placeholder: "Search houses by place", class: "form-control" %>
          <div class="input-group-btn">
            <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>
          </div>
        </div>
        <% end %>
        <ul class="nav navbar-nav navbar-right ">
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"
              role="button" aria-haspopup="true" aria-expanded="false">
              <%= current_user.username.capitalize %>'s Profile
              <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "View your profile",
                                  user_path(current_user) %></li>
                <li><%= link_to "Edit your profile",
                                  edit_user_path(current_user) %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Log out", logout_path,
                                        method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Log in", login_path %></li>
          <% end %>
        </ul>

  </div>
  </div><!-- /.container-fluid -->
</nav>
